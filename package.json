{
  "name": "pong",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && webpack --config webpack.production.config.js && npm-run-all copy:files && sass sass:dist/css",
    "copy:files": "copy-and-watch static/**/* dist/",
    "copy:files-fonts": "copy-and-watch static/fonts/**/* dist/fonts",
    "copy:files-sounds": "copy-and-watch static/sounds/**/* dist/sounds",
    "copy:files-favicon": "copy-and-watch static/favicon.png dist/favicon.ico",
    "start": "node .",
    "watch": "npm-run-all --parallel watch:compile watch:files watch:nodemon watch:sass",
    "watch:server": "tsc -w -p tsconfig.json",
    "watch:client": "webpack --watch",
    "watch:compile": "npm-run-all --parallel watch:client watch:server",
    "watch:files": "copy-and-watch --watch static/**/* dist/",
    "watch:sass": "sass --watch sass:dist/css",
    "watch:nodemon": "nodemon --watch dist/server/main.js --watch dist/server --watch dist/pages -e js,json,mjs,html,mustache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "consolidate": "^0.15.1",
    "express": "^4.17.1",
    "mustache": "^4.0.1",
    "mustache-express": "^1.3.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.6.4",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "copy-and-watch": "^0.1.5",
    "copyfiles": "^2.3.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.10",
    "ts-loader": "^7.0.5",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
