{
  "name": "pong",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && webpack && copyfiles pages/**/* dist/ && sass sass:dist/css",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel watch:tsc watch:files watch:nodemon",
    "watch:server": "tsc -w -p tsconfig.json",
    "watch:client": "webpack --watch",
    "watch:tsc": "npm-run-all --parallel watch:client watch:server",
    "watch:files": "copy-and-watch --watch pages/**/* dist/pages",
    "watch:nodemon": "nodemon --watch dist/server/main.js --watch dist/server --watch dist/pages -e js,json,mjs,html,mustache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "consolidate": "^0.15.1",
    "express": "^4.17.1",
    "mustache": "^4.0.1",
    "mustache-express": "^1.3.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.6.4",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "copy-and-watch": "^0.1.5",
    "copyfiles": "^2.3.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.10",
    "ts-loader": "^7.0.5",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
